@model dentist2.Models.gallery

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Maneger/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm(Html.BeginForm("edit", "galleries", FormMethod.Post, new { @enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>gallery</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.phtosource, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="image" src="~/Uploads/@Model.phtosource" width="150" />
                @Html.EditorFor(model => model.phtosource, new { htmlAttributes = new { @class = "form-control",@type ="hidden" } })
                <input type="file" class="form-control" name="photos"/>
                @Html.ValidationMessageFor(model => model.phtosource, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
